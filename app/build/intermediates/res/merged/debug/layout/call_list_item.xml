<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:background="@drawable/view_touch_selector"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="5dp" >

	    <TextView
	        android:id="@+id/call_item_time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:text="12:00 PM"
	        android:textAppearance="?android:attr/textAppearanceLarge" />

		<TextView
	        android:id="@+id/call_item_sunday"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/call_item_time"
	        android:text="S"
	        android:textAppearance="?android:attr/textAppearanceSmall" />

	    <TextView
	        android:id="@+id/call_item_monday"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/call_item_sunday"
	        android:layout_below="@+id/call_item_time"
	        android:layout_marginLeft="4dp"
	        android:text="M"
	        android:textAppearance="?android:attr/textAppearanceSmall" /> 
	        
	    <TextView
	        android:id="@+id/call_item_tuesday"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/call_item_monday"
	        android:layout_below="@+id/call_item_time"
	        android:layout_marginLeft="4dp"
	        android:text="T"
	        android:textAppearance="?android:attr/textAppearanceSmall" /> 
	        
	    <TextView
	        android:id="@+id/call_item_wednesday"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/call_item_tuesday"
	        android:layout_below="@+id/call_item_time"
	        android:layout_marginLeft="4dp"
	        android:text="W"
	        android:textAppearance="?android:attr/textAppearanceSmall" /> 
	        
	    <TextView
	        android:id="@+id/call_item_thursday"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/call_item_wednesday"
	        android:layout_below="@+id/call_item_time"
	        android:layout_marginLeft="4dp"
	        android:text="T"
	        android:textAppearance="?android:attr/textAppearanceSmall" /> 
	        
	    <TextView
	        android:id="@+id/call_item_friday"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/call_item_thursday"
	        android:layout_below="@+id/call_item_time"
	        android:layout_marginLeft="4dp"
	        android:text="F"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	        
	    <TextView
	        android:id="@+id/call_item_saturday"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/call_item_friday"
	        android:layout_below="@+id/call_item_time"
	        android:layout_marginLeft="4dp"
	        android:text="S"
	        android:textAppearance="?android:attr/textAppearanceSmall" />

		<TextView
			android:id="@+id/phone_call_repeat"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/call_item_saturday"
			android:layout_below="@+id/call_item_time"
			android:layout_marginLeft="4dp"
			android:text="⟳"
			android:textAppearance="?android:attr/textAppearanceSmall" />

		<ToggleButton
	        android:id="@+id/call_item_toggle"
	        android:layout_width="wrap_content"

	        android:layout_height="wrap_content"
			android:text="ToggleButton"
			android:layout_above="@+id/call_item_name"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true" />

		<TextView
			android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:layout_gravity="center_horizontal|bottom"
			android:layout_below="@+id/call_item_name" />

		<TextView
            android:id="@+id/call_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_gravity="left|bottom"
			android:layout_below="@+id/call_item_sunday"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true" />

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Call Now ✆"
			android:backgroundTint="#78909C"
			android:textAllCaps="false"
			android:textSize="12dp"
			android:id="@+id/button"
			android:layout_above="@+id/call_item_name"
			android:layout_centerHorizontal="true" />

	</RelativeLayout>

</FrameLayout>
