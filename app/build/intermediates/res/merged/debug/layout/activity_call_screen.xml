<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:background="#455A64"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:background="#455A64"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        tools:context="com.smartlifedigital.autodialer">

        <TextView
            android:id="@+id/call_screen_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scheduled Call Reminder!"
            android:textSize="25dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <View
            android:id="@+id/divider2"
            style="@style/Divider"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/call_screen_title" />

        <TextView
            android:id="@+id/call_screen_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="12:46 PM "
            android:textSize="68dp"
            android:layout_below="@+id/call_screen_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <View
            android:id="@+id/divider"
            style="@style/Divider"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/call_screen_time" />

        <TextView
            android:id="@+id/call_screen_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/view_touch_selector"
            android:textSize="26dp"
            android:text="Call Name"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/call_screen_time" />

        <TextView
            android:id="@+id/call_screen_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23dp"
            android:text="Call Number"
            android:gravity="center"
            android:layout_alignLeft="@+id/call_screen_name"
            android:layout_alignStart="@+id/call_screen_name"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/call_screen_name" />

        <View
            android:id="@+id/divider5"
            style="@style/Divider"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/call_screen_number" />

        <com.rey.material.widget.Button
            xmlns:app="http://schemas.android.com/apk/res-auto"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/contact"
            android:id="@+id/contacts"
            android:layout_alignBaseline="@+id/autodial_number"
            android:layout_alignRight="@+id/divider2"
            android:layout_alignEnd="@+id/divider2"
            app:rd_rippleType="touch"
            app:rd_backgroundAnimDuration="0"
            app:rd_backgroundColor="@android:color/transparent"
            app:rd_maxRippleRadius="3dp"
            app:rd_rippleAnimDuration="150"
            app:rd_enable="true"/>

        <Button
            android:id="@+id/call_screen_button"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:background="@drawable/phone"
            android:textAllCaps="false"
            android:text=""
            android:textSize="25dp"
            android:layout_alignTop="@+id/call_screen_button2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/call_screen_button2"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:text=""
            android:textSize="25dp"
            android:textAllCaps="false"
            android:background="@drawable/hangup"
            android:layout_above="@+id/textView5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="&quot;Initiating Call...&quot;"
            android:id="@+id/textView"
            android:gravity="center"
            android:layout_below="@+id/call_screen_number"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <View
            android:id="@+id/divider43"
            style="@style/Divider"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView" />

        <Button
            android:textSize="10dp"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:textAllCaps="false"
            android:text=""
            android:id="@+id/button21"
            android:background="@drawable/resch"
            android:layout_above="@+id/textView7"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="90dp"
            android:textSize="10dp"
            android:visibility="invisible"
            android:layout_height="90dp"
            android:textAllCaps="false"
            android:text=""
            android:id="@+id/button2"
            android:background="@drawable/resch"/>

        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Cancel Call"
            android:textSize="12.5dp"
            android:id="@+id/textView5"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/call_screen_button2"
            android:layout_alignStart="@+id/call_screen_button2"
            android:layout_alignRight="@+id/call_screen_button2"
            android:layout_alignEnd="@+id/call_screen_button2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Start Call Now"
            android:gravity="center"
            android:id="@+id/textView6"
            android:textSize="12.5dp"
            android:layout_below="@+id/call_screen_button"
            android:layout_alignRight="@+id/call_screen_button"
            android:layout_alignEnd="@+id/call_screen_button"
            android:layout_alignLeft="@+id/call_screen_button"
            android:layout_alignStart="@+id/call_screen_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Reschedule Call"
            android:textSize="12.5dp"
            android:gravity="center"
            android:id="@+id/textView7"
            android:layout_alignRight="@+id/button21"
            android:layout_alignEnd="@+id/button21"
            android:layout_alignTop="@+id/textView6"
            android:layout_alignLeft="@+id/button21"
            android:layout_alignStart="@+id/button21" />

    </RelativeLayout>
</ScrollView><!-- From: file:/C:/Users/Aravind/Documents/GitHub/Auto%20Dialer/app/src/main/res/layout/activity_call_screen.xml -->