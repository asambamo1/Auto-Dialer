<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference android:title="Use 24-hour format"
        android:defaultValue="true"
        android:summaryOn="@string/c24"
        android:summaryOff="@string/c12"
        android:key="time" />

    <SwitchPreference android:title="Show Phone Number in Call List"
        style="@style/Material.Widget.Switch"
        android:defaultValue="true"
        android:summaryOn="Phone Number Visible"
        android:summaryOff="Phone Number Hidden"
        android:key="number" />

    <EditTextPreference android:title="Reminder Timer"
        android:key="callreminder"
        android:inputType="number"
        android:maxLength="2"
        android:summary="@string/rs"></EditTextPreference>

    <Preference android:title="About"
        android:key="about"
        android:summary="@string/abt"/>

</PreferenceScreen>

