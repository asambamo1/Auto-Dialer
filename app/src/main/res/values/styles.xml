<resources>


    <style name="App" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#455A64</item>
        <item name="colorPrimaryDark">#263238</item>
    </style>

    <style name="App1" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#455A64</item>
        <item name="colorPrimaryDark">#263238</item>
    </style>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="android:Theme.DeviceDefault.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <style name="AppBase" parent="android:Theme.DeviceDefault.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

	<style name="Divider">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">1.5dp</item>
		<item name="android:background">?android:attr/listDivider</item>
	</style>

    <style name="switch_style">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="switch_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|center_vertical</item>
    </style>
</resources>